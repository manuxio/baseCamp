extends ../layouts/portal
append body
  .container
    .well.bs-component(style="margin-top: 10px")
      h1= title
      form.form-horizontal(method="POST")
        .form-group
          label(for="name", class="col-lg-2 control-label") Name
          .col-lg-10
            input(class="form-control", id="name", name="name", placeholder="Location name",value=item.name)
              
        .form-group
          label(for="description", class="col-lg-2 control-label") Description
          .col-lg-10
            textarea(class="form-control", id="description", name="description", placeholder="Location description")= item.description

        .form-group
          label(for="altitude", class="col-lg-2 control-label") Altitude
          .col-lg-10
            input(type="number",step="0.01",class="form-control", id="altitude", name="altitude", placeholder="Location's altitude",value=item.altitude)
        
        .form-group
          label(for="latitude", class="col-lg-2 control-label") Latitude
          .col-lg-10
            input(type="number",step="0.00000000001",class="form-control", id="latitude", name="latitude", placeholder="Location's latitude",value=item.latitude)

        .form-group
          label(for="longitude", class="col-lg-2 control-label") Longitude
          .col-lg-10
            input(type="number",step="0.00000000001",class="form-control", id="longitude", name="longitude", placeholder="Location's longitude",value=item.longitude)

        .form-group
          .col-lg-10.col-lg-offset-2
            button.btn.btn-default(type="reset") Reset
            button.btn.btn-primary(type="submit") Save

